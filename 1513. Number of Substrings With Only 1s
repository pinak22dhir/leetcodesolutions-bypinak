class Solution {
    public int numSub(String s) {
    int MOD = 1_000_000_007;
    int prev=0;
    int cur=0;  
    long k=0;
    for(int i=0;i<s.length();i++){
       if(s.charAt(i)=='0'){
          cur=0;
       }
       else{
         cur+=1;
       }
       k+=cur;
       k%=MOD;
    }
    return (int)k;
    }
}
